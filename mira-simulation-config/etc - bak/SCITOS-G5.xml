<root>
	<unit id="Robot" class="mira::robot::SCITOSSimulatorManager">
		<RobotType>G5</RobotType>
		<RobotModelProvider>
			<include file="${findpkg SCITOS}/etc/SCITOS-G5-model.xml" />
		</RobotModelProvider>
		<Modules>
			<MainControlUnit class="mira::robot::MainControlUnitHG2Simulator">
				<OdometryInterval>50</OdometryInterval>
				<!-- abuse correction factors for applying an error to the otherwise undisturbed odometry -->
				<UseOdometryCorrection>true</UseOdometryCorrection>
				<OdometryCorrection>
					<cb>0.98</cb>
					<cr>1.02</cr>
					<cd>1.0</cd>
				</OdometryCorrection>
				<Force>80</Force>
				<RFIDReaderEnabled>true</RFIDReaderEnabled>
				<FrontLaser>
					<MaxCurrent>2.5</MaxCurrent>
					<Enabled>true</Enabled>
				</FrontLaser>
				<EBC_5V>
					<MaxCurrent>2.5</MaxCurrent>
					<Enabled>true</Enabled>
				</EBC_5V>
				<EBC_12V>
					<MaxCurrent>2.5</MaxCurrent>
					<Enabled>true</Enabled>
				</EBC_12V>
				<EBC_24V>
					<MaxCurrent>4</MaxCurrent>
					<Enabled>true</Enabled>
				</EBC_24V>

				<if sonar="true">
					<USSensorModeSelection>1</USSensorModeSelection>
					<SonarEnabled>true</SonarEnabled>
					<USSensorHG1LowNoiseMode>false</USSensorHG1LowNoiseMode>
					<USSensorHG1MeasurementInterval>100</USSensorHG1MeasurementInterval>
					<USSensorHG1SensorsPerMeasurement>3</USSensorHG1SensorsPerMeasurement>
					<!-- In the following example, the four sonars at the back
					     of the robot will not be used. -->
					<!--
					<USSensorHG1IgnoredSensors>
						<item>0</item>
						<item>1</item>
						<item>22</item>
						<item>23</item>
					</USSensorHG1IgnoredSensors>
					-->
				</if>
			</MainControlUnit>
			<Charger class="mira::robot::ChargerHG2Simulator" />
			<RFIDReader class="mira::robot::RFIDReaderSimulator" />
			<Head class="mira::robot::HeadG5Simulator" />
		</Modules>
	</unit>

	<link child="RobotFrame" parent="OdometryFrame" />
</root>
