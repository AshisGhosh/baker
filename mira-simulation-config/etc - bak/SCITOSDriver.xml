<root>
	<var robot="SCITOS-A5" />
	<var canType="PCAN" />
	<var coverType="2008" />
	<var sonar="false" />

	<if robot="SCITOS-A5">
		<var frontLaser="SickS300" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var rearLaser="none" />
		<var color="1 0 0" />
	</if>
	<if robot="SCITOS-G3">
		<var frontLaser="SickS300" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var rearLaser="none" />
		<var color="1 0 0" />
	</if>
	<if robot="SCITOS-HM2012">
		<var frontLaser="SickS300" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var rearLaser="none" />
		<var color="0 0 1" />
	</if>
	<if robot="SCITOS-G5">
		<var frontLaser="LeuzeRS4" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var rearLaser="none" />
		<var hmi="true" />
		<var head="true" />
		<var color="0 0 1" />
	</if>
	<if robot="SCITOS-G6">
		<var bodyType="tray" />
		<var frontLaser="LeuzeRS4" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var rearLaser="LeuzeRS4" />
		<var rearLaserDevice="/dev/ttyUSB1" />
		<var color="0 0 1" />
	</if>
	<if robot="SCITOS-G6-small">
		<var bodyType="tray" />
		<var frontLaser="SickS300" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var color="0 0 1" />
	</if>
	<if robot="SCITOS-X3">
		<var frontLaser="SickS300" />
		<var rearLaser="SickS300" />
		<var color="1 0 0" />
		<var frontLaserIgnoreIntervals="${findpkg SCITOS}/etc/SCITOS-X3-IgnoreIntervals-SickS300.xml"/>
		<var rearLaserIgnoreIntervals="${findpkg SCITOS}/etc/SCITOS-X3-IgnoreIntervals-SickS300.xml"/>
	</if>
	<if robot="WeRobots">
		<var frontLaser="SickS300" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var rearLaser="none" />
		<var color="1 1 1" />
		<var frontLaserIgnoreIntervals="${findpkg WeRobotsConfig}/etc/${robot}-IgnoreIntervals-${frontLaser}.xml"/>
	</if>
	<if robot="Tory">
		<var frontLaser="SickS300" />
		<var upperFrontLaser="SickS300" />
		<var frontLaserDevice="/dev/ttyUSB0" />
		<var rearLaser="none" />
		<var color="1 1 1" />
		<var frontLaserIgnoreIntervals="${findpkg ToryConfig}/etc/Tory-IgnoreIntervals-SickS300.xml"/>
	</if>

	<!-- The default laser ignore interval file names, if not specialized for the robot -->
	<var frontLaserIgnoreIntervals="${findpkg SCITOS}/etc/${robot}-IgnoreIntervals-${frontLaser}.xml"/>
	<var rearLaserIgnoreIntervals="${findpkg SCITOS}/etc/${robot}-IgnoreIntervals-${rearLaser}.xml"/>

	<!-- The default configuration file for the robot. -->
	<var robotConfigFile="${findpkg SCITOSSimulator}/etc/${robot}.xml"/>

	<namespace name="robot">
		<include file="${robotConfigFile}"/>
	</namespace>
</root>
